<layout version="0.1.0">

    <catalog_product_view>
        <reference name="head">
	    <action method="addJs"><script>Bjquery/jquery-1.8.3.min.js</script></action>
            <action method="addJs"><script>Bjquery/jquery.elevatezoom.js</script></action>
            <action method="addJs"><script>Bjquery/App/app.js</script></action>

        </reference>
        <reference name="product.info.media">
            <action method="setTemplate" ifconfig="boss_zoom/general/enabled"><template>zoom/media.phtml</template></action>
        </reference>
    </catalog_product_view>

    <review_product_list>
        <reference name="head">
	    <action method="addJs"><script>Bjquery/jquery-1.8.3.min.js</script></action>
            <action method="addJs"><script>Bjquery/jquery.elevatezoom.js</script></action>
            <action method="addJs"><script>Bjquery/App/app.js</script></action>

        </reference>
        <reference name="product.info.media">
            <action method="setTemplate" ifconfig="zoom/general/enabled"><template>zoom/media.phtml</template></action>
        </reference>
    </review_product_list>

</layout>

